<html ng-app="app.todos">
    <head>
        <title>Node/Angular Todos</title>

        <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@6.4.2/css/fontawesome.min.css">
        <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/angular-xeditable/0.10.2/css/xeditable.min.css">
        
        <link rel="stylesheet" href="assets/css/style.css">

        <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular.min.js"></script>
        <script src="////cdnjs.cloudflare.com/ajax/libs/angular-xeditable/0.10.2/js/xeditable.min.js"></script>

        <script src="assets/js/main/app.js"></script>
        <script src="assets/js/main/services/svTodos.js"></script>
    </head>

<body ng-controller="todoController">
    <div class="container tag-gray">
        <div class="jumbotron text-center">
            <h1>{{ appName }} <span class="badge bg-info"> {{ todos.length }}</span></h1>    
        </div>

        <div  id="todo-list" class="row d-flex justify-content-center my-4">
            <div class="col-sm-6 col-sm-offset-3">
                <div class="checkbox" ng-repeat="todo in todos">
                    <input type="checkbox" ng-model="todo.isDone" ng-change="updateTodo(todo)">
                    <a ng-click="deleteTodo(todo)"><i class="fa fa-remove"></i></a>
                    <a ng-click="textBtnForm.$show()" ng-hide="textBtnForm.$visible"><i class="fa fa-edit"></i></a>
                    <span ng-class="{ strike: todo.isDone }" editable-text="todo.text" e-form="textBtnForm" onaftersave="updateTodo(todo)"> {{ todo.text }} </span> 
                </div>
                <p class="text-center">
                    <span class="fa fa-spinner fa-spin fa-3x" ng-show="loading"></span>
                </p>
            </div>
        </div>

        <div id="todo-form" class="row d-flex justify-content-center my-4">
            <div class="col-sm-8 col-sm-offset-2 text-center">
                <form action="">
                    <div class="form-group">
                        <input type="text" ng-model="formData.text" class="form-control input-lg text-center" placeholder="What do you want to do?">
                    </div>


                    <button type="submit" class="btn btn-primary btn-lg my-4" ng-disabled="!formData || !formData.text" ng-click="createTodo()">
                        Add
                    </button>
                    
                    <!-- <botton type="submit" class="btn btn-primary btn-lg my-4" ng-disabled="!formData || !formData.text" ng-click="createTodo()">
                        Add
                    </botton> -->
                </form>
            </div>
        </div>

    </div>


</body>

</html>